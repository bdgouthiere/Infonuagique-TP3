
@{
    ViewData["Title"] = "Index";
    string urlJeton = ViewData["jetonDocument"] as string;
}

<h1>Liste des documents</h1>
<p>
    <a asp-action="Create">Ajouter un document</a>
</p>
<hr />
<table  class="table">
    <thead>
        <tr>
            <th>Nom</th>
            <th>Type</th>
            <th>Action</th>
        </tr>
    </thead>

    <tbody>
    @foreach (string lien in Model)
    {
        var docName = lien.Split("/").Last();
        var link = lien + "?" + urlJeton;
        var typeDocument = docName.Split("_")[1];
        typeDocument = typeDocument == "LettreDeMotivation" ? "Lettre de Motivation" : typeDocument;
        <tr>
            <td>@docName</td>
            <td>@typeDocument</td>
            <td>
				<a href="@link" class="btn btn-primary pr-2" target="_blank">Voir</a>
			</td>
        </tr>
    }
    </tbody>
</table>
